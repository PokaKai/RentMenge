@using PagedList
@using PagedList.Mvc

@model IPagedList<rent.Models.Rent>

@{
    ViewBag.Title = "Index";
}

<link href="~/Content/PagedList.css" rel="stylesheet" />
<div class="container">
    

    @using (Html.BeginForm())
    {
    <div class="input-group mt-2 mb-3  " style="background-color:#f7f1f0">
        <ul class="d-flex justify-content-start align-items-center g-2 ">
            <li><span>縣市: </span>@Html.DropDownList("rentRegion", "All")</li>
            <li><span>類型: </span>@Html.DropDownList("rentGenre", "All")</li>
            <li><span>型態: </span>@Html.DropDownList("rentBuild", "All")</li>
            <li><span>性別: </span>@Html.DropDownList("rentGender", "All")  </li>
            <li class="d-flex align-items-center"><span>地址: </span><span>@Html.TextBox("searchString")</span></li>
            <li>
                <input type="submit" value="查詢" class="btn btn-outline-brown mx-1 py-0"/>
            </li>
        </ul>
    </div>
    }

