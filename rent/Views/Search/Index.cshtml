        </div>
        <hr>
    </div>



    <div class="switch-tips mt-5">
        <h3>"為您找到<span>14</span>間房屋"</h3>
        <ul class="switch-sort">
            <li>
                <label>
                    默認
                    <input type="checkbox" class="filterArrow_checked" name="" id="">
                    <span class="filterArrow fas fa-arrow-circle-down"></span>
                </label>
            </li>
            <li>
                <label>
                    最新
                    <input type="checkbox" class="filterArrow_checked" name="" id="">
                    <span class="filterArrow fas fa-arrow-circle-down"></span>
                </label>
            </li>
            <li>
                <label>
                    @Html.ActionLink("價格", "Index", new { renttitle = ViewBag.monthly_price }, new { @style = "text-decoration:none;font-weight: 100;color:#212529" })
                    <span class="filterArrow fas fa-arrow-circle-down"></span>
                </label>
            </li>
        </ul>
    </div>


    <div class="filter-housingInformation">
        @foreach (var item in Model)
        {
            <div class="card mb-3">
                <div class="row g-2">
                    <div class="col col-md-3">
                        <img src="@item.houseimage" class="w-100" alt="...">
                    </div>
                    <div class="col-md-9">
                        <div class="card-body"> 
                            <label>
                                <input type="checkbox" class="heart_checked" name="" id="">
                                <span class="heart fas fa-heart"></span>
                            </label>
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.address)</h5>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.sub_region)</p>
                            <span class="card-text">@Html.DisplayFor(modelItem => item.property_type)</span>
                            <span class="card-text">@Html.DisplayFor(modelItem => item.floor_ping)坪</span>
                            <span>@Html.DisplayFor(modelItem => item.floor)F</span>||<span>@Html.DisplayFor(modelItem => item.total_floor)F</span>
                            @Html.ActionLink("查看資訊", "Details", "Search", new { id = item.ID }, new { @id = "ID", @class = "stretched-link", @value = item.ID })
                            <span class="card-price"> @Html.DisplayFor(modelItem => item.monthly_price)元 / 月</span>

                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
@Html.PagedListPager(Model, page => Url.Action("index", new { page }));
