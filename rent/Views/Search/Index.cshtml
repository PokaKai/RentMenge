                            <button type="button" data-bs-target="#carouselPic-1" data-bs-slide-to="2"
                                    aria-label="Slide 3"></button>
                        </div>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="https://raw.githubusercontent.com/PokaKai/rent_photo/main/3.webp" class="d-block w-100" alt="...">
                            </div>
                            <div class="carousel-item">
